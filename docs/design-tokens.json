        "600": { "$type": "color", "$value": "#5F5852", "$description": "Rich brown-gray" },
        "700": { "$type": "color", "$value": "#47413C", "$description": "Deep charcoal" },
        "800": { "$type": "color", "$value": "#2D2925", "$description": "Near black" },
        "900": { "$type": "color", "$value": "#201D1A", "$description": "Sophisticated black" }
      },
      "orange": {
        "50": { "$type": "color", "$value": "#FEFCF7", "$description": "Cream whisper" },
        "100": { "$type": "color", "$value": "#FCF4E8", "$description": "Warm cream" },
        "200": { "$type": "color", "$value": "#F7E5CC", "$description": "Soft bronze" },
        "300": { "$type": "color", "$value": "#EDCCA6", "$description": "Muted gold" },
        "400": { "$type": "color", "$value": "#DAA56A", "$description": "Refined copper" },
        "500": { "$type": "color", "$value": "#C58B55", "$description": "Elegant bronze" },
        "600": { "$type": "color", "$value": "#A87144", "$description": "Deep copper" },
        "700": { "$type": "color", "$value": "#8B5C38", "$description": "Rich bronze" },
        "800": { "$type": "color", "$value": "#6E492D", "$description": "Dark copper" },
        "900": { "$type": "color", "$value": "#553924", "$description": "Deepest bronze" }
      }
    }
  },
  "typography": {
    "font-family": {
      "heading": {
        "$type": "fontFamily",
        "$value": ["Montserrat", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif"],
        "$description": "Professional headings with authority"
      },
      "body": {
        "$type": "fontFamily", 
        "$value": ["Source Sans Pro", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif"],
        "$description": "Clean readable body text"
      },
      "serif": {
        "$type": "fontFamily",
        "$value": ["Playfair Display", "Georgia", "Times New Roman", "serif"],
        "$description": "Elegant serif for logos and special text"
      }
    },
    "font-weight": {
      "light": { "$type": "fontWeight", "$value": 400 },
      "medium": { "$type": "fontWeight", "$value": 500 },
      "semibold": { "$type": "fontWeight", "$value": 600 },
      "bold": { "$type": "fontWeight", "$value": 700 }
    },
    "letter-spacing": {
      "tight": { "$type": "dimension", "$value": "-0.025em" },
      "normal": { "$type": "dimension", "$value": "-0.02em" },
      "relaxed": { "$type": "dimension", "$value": "-0.015em" },
      "wide": { "$type": "dimension", "$value": "0.15em" }
    }
  },
  "spacing": {
    "xs": { "$type": "dimension", "$value": "4px" },
    "sm": { "$type": "dimension", "$value": "8px" },
    "md": { "$type": "dimension", "$value": "16px" },
    "lg": { "$type": "dimension", "$value": "24px" },
    "xl": { "$type": "dimension", "$value": "32px" },
    "2xl": { "$type": "dimension", "$value": "48px" },
    "3xl": { "$type": "dimension", "$value": "64px" }
  },
  "border-radius": {
    "sm": { "$type": "dimension", "$value": "2px" },
    "md": { "$type": "dimension", "$value": "4px" },
    "lg": { "$type": "dimension", "$value": "6px" },
    "xl": { "$type": "dimension", "$value": "8px" },
    "full": { "$type": "dimension", "$value": "50%" }
  },
  "shadow": {
    "gallifrey": {
      "sm": {
        "$type": "shadow",
        "$value": "0 4px 6px -1px rgba(31, 41, 55, 0.1), 0 2px 4px -1px rgba(31, 41, 55, 0.06)"
      },
      "md": {
        "$type": "shadow", 
        "$value": "0 10px 15px -3px rgba(31, 41, 55, 0.1), 0 4px 6px -2px rgba(31, 41, 55, 0.05)"
      },
      "lg": {
        "$type": "shadow",
        "$value": "0 20px 25px -5px rgba(31, 41, 55, 0.1), 0 10px 10px -5px rgba(31, 41, 55, 0.04)"
      },
      "command": {
        "$type": "shadow",
        "$value": "0 8px 32px rgba(28, 73, 113, 0.15)"
      }
    },
    "narrative": {
      "sm": {
        "$type": "shadow",
        "$value": "0 4px 6px -1px rgba(45, 41, 37, 0.1), 0 2px 4px -1px rgba(45, 41, 37, 0.06)"
      },
      "md": {
        "$type": "shadow",
        "$value": "0 10px 15px -3px rgba(45, 41, 37, 0.1), 0 4px 6px -2px rgba(45, 41, 37, 0.05)"
      }
    }
  },
  "animation": {
    "duration": {
      "fast": { "$type": "duration", "$value": "150ms" },
      "normal": { "$type": "duration", "$value": "300ms" },
      "slow": { "$type": "duration", "$value": "500ms" }
    },
    "easing": {
      "ease-out": { "$type": "cubicBezier", "$value": [0.4, 0, 0.2, 1] },
      "ease-in": { "$type": "cubicBezier", "$value": [0.4, 0, 1, 1] },
      "bounce": { "$type": "cubicBezier", "$value": [0.34, 1.56, 0.64, 1] }
    }
  },
  "messaging": {
    "spiritual-tech": {
      "moksha": {
        "$type": "string",
        "$value": "Complete liberation from operational burden through AI-powered autonomous systems",
