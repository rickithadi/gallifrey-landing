      "light-gray": {
        "$type": "color",
        "$value": "#606770", 
        "$description": "Improved contrast 4.51:1 - accessible secondary text"
      },
      "medium-gray": {
        "$type": "color",
        "$value": "#6B7280",
        "$description": "Secondary text - balanced readability"
      },
      "dark-gray": {
        "$type": "color",
        "$value": "#374151", 
        "$description": "Body text - executive authority"
      },
      "charcoal": {
        "$type": "color",
        "$value": "#1F2937",
        "$description": "Primary text & headings - commanding presence"
      },
      "teal": {
        "$type": "color",
        "$value": "#1C4971",
        "$description": "Deeper Steel Blue-Teal - commanding authority with sophistication"
      },
      "teal-dark": {
        "$type": "color",
        "$value": "#153A5B",
